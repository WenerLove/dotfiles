# 编码转换
alias utf82gbk="iconv -f utf-8 -t gbk"
alias gbk2utf8="iconv -f gbk -t utf-8"

# 在已经打开的窗口中打开 vim
iscmd gvim && alias gvimr="gvim --remote"

# XD
alias please='sudo $(fc -ln -1)'



